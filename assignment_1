// Assignment_1 from Ostad platform...

class Media {
  void play() {
    print("Playing media...");
  }
}

class Song extends Media {
  String artist;

  Song(this.artist);

  @override
  void play() {
    print("Playing song by $artist...");
  }
}

void main() {
  Media media = Media();
  Song song = Song("Justin Biber");

  media.play();
  song.play(); 
}

// output:
//Playing media...
//Playing song by Justin Biber...
